// configuration option for the quality_control.nf Pipeline for SGE

process {
    $get_pigz_version {
      executor = "local"
      cpus = 1
      memory = "2GB"
      time = "1h"
    }
    $get_file_name {
      executor = "sge"
      cpus = 8
      memory = "2GB"
      time = "10h"
      queueSize = 1000
      pollInterval = '60sec'
      queue = 'E5-2667v2h6deb128'
      penv = 'openmp16'
    }
    $fastqc {
      executor = "sge"
      cpus = 1
      memory = "2GB"
      time = "10h"
      queueSize = 1000
      pollInterval = '60sec'
      queue = 'monointeldeb128, E5-2667v2h6deb128, E5-2667v2d2deb128'
    }
    $adaptor_removal {
      executor = "sge"
      cpus = 1
      memory = "2GB"
      time = "10h"
      queueSize = 1000
      pollInterval = '60sec'
      queue = 'monointeldeb128, E5-2667v2h6deb128, E5-2667v2d2deb128'
    }
    $trimming {
      executor = "sge"
      cpus = 8
      memory = "2GB"
      time = "10h"
      queueSize = 1000
      pollInterval = '60sec'
      queue = 'E5-2667v2h6deb128'
      penv = 'openmp16'
    }
    $fastqc_trimmed {
      executor = "sge"
      cpus = 1
      memory = "2GB"
      time = "10h"
      queueSize = 1000
      pollInterval = '60sec'
      queue = 'monointeldeb128, E5-2667v2h6deb128, E5-2667v2d2deb128'
    }
    $multiqc {
      executor = "local"
      cpus = 1
      memory = "2GB"
      time = "1h"
    }
}
