// configuration option for the quality_control.nf Pipeline for SGE

process {
    $get_file_name {
      executor = "sge"
      cpus = ${params.cpu}
      memory = "2GB"
      time = "10h"
      queueSize = 1000
      pollInterval = '60sec'
      queue = 'E5-2670deb128*, E5-2670deb256*'
      penv = 'mpi16_debian ${params.cpu}'
    }
    $fastqc {
      executor = "sge"
      cpus = 1
      memory = "2GB"
      time = "10h"
      queueSize = 1000
      pollInterval = '60sec'
      queue = 'monointeldeb128, E5-2667v2h6deb128, E5-2667v2d2deb128'
    }
    $adaptor_removal {
      executor = "sge"
      cpus = 1
      memory = "2GB"
      time = "10h"
      queueSize = 1000
      pollInterval = '60sec'
      queue = 'monointeldeb128, E5-2667v2h6deb128, E5-2667v2d2deb128'
    }
    $trimming {
      executor = "sge"
      cpus = ${params.cpu}
      memory = "2GB"
      time = "10h"
      queueSize = 1000
      pollInterval = '60sec'
      queue = 'E5-2670deb128*, E5-2670deb256*'
      penv = 'mpi16_debian ${params.cpu}'
    }
    $fastqc_trimmed {
      executor = "sge"
      cpus = 1
      memory = "2GB"
      time = "10h"
      queueSize = 1000
      pollInterval = '60sec'
      queue = 'monointeldeb128, E5-2667v2h6deb128, E5-2667v2d2deb128'
    }
    $multiqc {
      executor = "local"
      cpus = 1
      memory = "2GB"
      time = "10h"
    }
}
