// configuration option for the quality_control.nf Pipeline on local mode

params {
  name = "NGS analysis"

  // gobal
  gzip = "/usr/bin/gzip"
  pigz = "/usr/bin/pigz"
  pigz_module = ""
  file_handle = "file_handle.py"
  file_handle_module = ""
  python2_unload_module = ""
  python3_unload_module = ""
  pbs_header = ""

  // quality control
  fastqc = "fastqc"
  fastqc_module = ""
  urqt = "UrQt"
  urqt_module = ""
  cutadapt = "cutadapt"
  cutadapt_module = ""
  multiqc = "multiqc"
  multiqc_module = ""

  // mapping
  salmon = "salmon"
  salmon_module = ""
  kallisto = "kallisto"
  kallisto_module = ""
  bowtie2 = "bowtie2"
  bowtie2_module = ""
  bedtools = "bedtools"
  bedtools_module = ""
  samtools = "samtools"
  samtools_module = ""
  htseq = "htseq-count"
  htseq_module = ""
  rsem = "rsem"
  rsem_module = ""
}

docker {
  enabled = false
  temp = 'auto'
  enabled = true
}

process {
  $get_fastq_name {
    container = "pipeline:0.0.1"
    cpus = 4
    memory = "5GB"
    time = "2h"
  }
  $fastqc_raw {
    container = "pipeline:0.0.1"
    cpus = 1
    memory = "2GB"
    time = "10h"
  }
  $adaptor_removal {
    container = "pipeline:0.0.1"
    cpus = 1
    memory = "2GB"
    time = "24h"
  }
  $trimming {
    container = "pipeline:0.0.1"
    cpus = 4
    memory = "2GB"
    time = "24h"
  }
  $fastqc_trimmed {
    container = "pipeline:0.0.1"
    cpus = 1
    memory = "5GB"
    time = "5h"
  }
  $multiqc {
    container = "pipeline:0.0.1"
    cpus = 1
    memory = "2GB"
    time = "1h"
  }
  $get_salmon_version {
    container = "pipeline:0.0.1"
    cpus = 1
    memory = "2GB"
  }
  $get_kallisto_version {
    container = "pipeline:0.0.1"
    cpus = 1
    memory = "2GB"
  }
  $get_bowtie2_version {
    container = "pipeline:0.0.1"
    cpus = 1
    memory = "2GB"
  }
  $get_rsem_version {
    container = "pipeline:0.0.1"
    cpus = 1
    memory = "2GB"
  }
  $get_htseq_version {
    container = "pipeline:0.0.1"
    cpus = 1
    memory = "2GB"
  }
  $get_bedtools_version {
    container = "pipeline:0.0.1"
    cpus = 1
    memory = "2GB"
  }
  $get_samtools_version {
    container = "pipeline:0.0.1"
    cpus = 1
    memory = "2GB"
  }
  $get_pigz_version {
    container = "pipeline:0.0.1"
    cpus = 1
    memory = "2GB"
  }
  $get_gzip_version {
    container = "pipeline:0.0.1"
    cpus = 1
    memory = "2GB"
  }
  $get_file_name_reference {
    container = "pipeline:0.0.1"
    cpus = 4
    memory = "5GB"
  }
  $get_file_name_annotation {
    container = "pipeline:0.0.1"
    cpus = 1
    memory = "2GB"
  }
  $split_ref {
    container = "pipeline:0.0.1"
    cpus = 4
    memory = "5GB"
  }
  $indexing {
    container = "pipeline:0.0.1"
    cpus = 4
    memory = "30GB"
  }
  $mapping_quantification {
    container = "pipeline:0.0.1"
    cpus = 16
    memory = "30GB"
  }
  $mapping {
    container = "pipeline:0.0.1"
    cpus = 16
    memory = "30GB"
  }
  $sorting {
    container = "pipeline:0.0.1"
    cpus = 8
    memory = "30GB"
  }
  $quantification {
    container = "pipeline:0.0.1"
    cpus = 1
    memory = "5GB"
  }
}
