// configuration option for the quality_control.nf Pipeline
// the following option are shared between the profiles :
// - quality_control_local
// - quality_control_docker
// - quality_control_sge

params {
  // quality_control.nf config
  name = "quality control analysis"
  pigz_version = "2.3.4"
  file_handle_version = "0.1.1"
  python2_version = "2.7"
  python3_version = "3.5"
  nextflow_version = "0.25.1"
  fastqc_version = "0.11.5"
  multiqc_version = "1.0"
  urqt_version = "d62c1f8"
  nextflow_version = "0.25.1"
  // adaptor removal
  adaptor_removal = "cutadapt"
  adaptor_sequence_single = "-a AGATCGGAAGAG -g CTCTTCCGATCT"
  adaptor_sequence_paired = "-a AGATCGGAAGAG -g CTCTTCCGATCT -A AGATCGGAAGAG -G CTCTTCCGATCT"
  // trimming
  trimmer = "UrQt"
  quality_threshold = 20
}
